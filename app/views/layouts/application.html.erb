<%
  # HTML Entities
  material_ui_meta_tags = '<meta charset="utf-8">
    <meta content="initial-scale=1, shrink-to-fit=no, width=device-width" name="viewport">'.html_safe
%>
<!DOCTYPE html>
<html>
  <head>
    <title>The Bit Banging Blog</title>
    <%= csrf_meta_tags %>
    <%= material_ui_meta_tags %>    
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render "layouts/site_navbar/navbar" %>
    <div class="container-fluid application-container">
      <br />
      <%= yield %>
      <br />
    </div>
  </body>
</html>
