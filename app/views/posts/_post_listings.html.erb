<% if posts.count != 0 %>
  <div class="row">
    <%= render "summary_index", { posts: posts }%>
    <%= render "summaries", { posts: posts }%>
  </div>
<% else %>
  <h2 class="text-center">Sorry no posts available :(</h2>
<% end %>



<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3 class="text-left"><%= title %></h3>
        <br>
      </div>
      <div class="col-sm-6">
        <h3 class="text-right"><%= posts.count == 1 ? posts.count.to_s + ' Post' : posts.count.to_s + ' Posts' %></h3>
        <br>
      </div>
    </div>
  </div>

</footer>

<script>
  $(document).ready(function() {
    $(".list-group-item-action").each(function() {
      this.onclick = function() {
        const $postSummary = $("#" + this.dataset.target);
        $('.list-group-item-action.active').first().removeClass("active");
        this.classList.add("active");
        $('html, body').animate({
          scrollTop: $postSummary.offset().top - 60
        }, 1000);
      }  
    });
    $(".list-group-item-action").first().addClass("active");
  });
</script>
