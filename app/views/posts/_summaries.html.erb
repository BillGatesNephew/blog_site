<div class="col-xs-12 col-sm-9">
    <% posts.each do |post| %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Written by <%= post.author_name %></h6>
          <p class="card-text"><%= post.summary %></p>
          <%= link_to 'View Post', post, class: 'card-link' %>
        </div>
      </div>
      <br>
    <% end %>
  </div>