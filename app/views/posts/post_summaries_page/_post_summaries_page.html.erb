<% 
  # HTML Entitites
  no_posts_message = '<h2 class="text-center">Sorry no posts available :(</h2>'.html_safe
%>
<% if posts.count != 0 %>
  <div class="row post-listings-main-row">
    <%= render "posts/post_summaries_page/post_listing", { posts: posts }%>
    <%= render "posts/post_summaries_page/post_card_summaries", { posts: posts }%>
  </div>
  <br>
  <br>
  <%= render "posts/post_summaries_page/summaries_footer", { post_number: posts.count, title: title }%>
  <%= javascript_include_tag 'post_summaries_page' %>
<% else %>
  <%= no_posts_message %>
<% end %>